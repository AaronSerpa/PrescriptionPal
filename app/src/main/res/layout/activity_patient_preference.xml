<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowPreference">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Email Notification"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="30dp"
        android:text="Text Notification"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <Switch
        android:id="@+id/switch3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switch2"
        android:layout_marginTop="30dp"
        android:text="Phone permission"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <Switch
        android:id="@+id/switch4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switch3"
        android:layout_marginTop="30dp"
        android:text="Microphone permission"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <Switch
        android:id="@+id/switch5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switch4"
        android:layout_marginTop="30dp"
        android:text="Contacts permission"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <Switch
        android:id="@+id/switch6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switch5"
        android:layout_marginTop="30dp"
        android:text="Calender permission"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>
</RelativeLayout>