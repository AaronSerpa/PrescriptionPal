<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ShowPharmacy">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Current Pharmacy"
        android:fontFamily="@font/abril_fatface"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView_pharmacy_name"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="No default pharmacy store"
        android:inputType="textMultiLine"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView_pharmacy_address"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:layout_below="@+id/textView_pharmacy_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint=" "
        android:inputType="textMultiLine"
        android:textSize="18dp"
        android:backgroundTint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView_pharmacy_hours"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:layout_below="@+id/textView_pharmacy_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint=" "
        android:inputType="textMultiLine"
        android:textSize="18sp"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/change_pharmacy_button"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView_pharmacy_hours"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="change pharmacy"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:onClick="changePharmacy"/>

    <Button
        android:id="@+id/show_pharmacy_back_button"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/change_pharmacy_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="back"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:onClick="clickOnBack"/>

</RelativeLayout>


