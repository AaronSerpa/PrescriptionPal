<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Signup">

    <TextView
        android:id="@+id/textView_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:fontFamily="@font/abril_fatface"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/signup_firstName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="FIRST NAME"
        android:inputType="textPersonName"
        android:backgroundTint="@color/colorPrimary"/>

    <EditText
        android:id="@+id/signup_lastName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_firstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="LAST NAME"
        android:inputType="textPersonName"
        android:backgroundTint="@color/colorPrimary"/>

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_lastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="E-MAIL"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/colorPrimary"/>

    <EditText
        android:id="@+id/signup_pw"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView_swithToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_signup"
        android:layout_alignStart="@id/button_signup"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Already have an account?" />

    <Button
        android:id="@+id/button_swithToLogin"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_signup"
        android:layout_alignEnd="@id/button_signup"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:onClick="switchToLogin"
        android:text="Log in"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>