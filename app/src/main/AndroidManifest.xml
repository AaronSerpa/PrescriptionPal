        <activity android:name=".SingleAccountSignup" />
        <activity android:name=".ShowPreference" />
        <activity android:name=".ChangePharmacy" />
        <activity android:name=".ShowPharmacy" />
        <activity
            android:name=".ListOfNewPrescriptions"
            android:label="@string/title_activity_list_of_new_prescriptions"
